{
    "version": "0.2",
    "languageSettings": [
        {
            // VSCode languageId. i.e. typescript, java, go, cpp, javascript, markdown, latex
            // * will match against any file type.
            "languageId": "*",
            // Language locale. i.e. en-US, de-AT, or ru. * will match all locales.
            // Multiple locales can be specified like: "en, en-US" to match both English and English US.
            "locale": "en,en-US,es-ES",
            // To exclude patterns, add them to "ignoreRegExpList"
            "ignoreRegExpList": [
                "/#include.*/"
            ],
            // List of dictionaries to enable by name in `dictionaryDefinitions`
            "dictionaries": [
                "softwareTerms",
                "html",
                "es-es"
            ],
            // Dictionary definitions can also be supplied here. They are only used iff "languageId" and "locale" match.
            "dictionaryDefinitions": []
        }
    ],
    "words": [
        "acelerómetro",
        "antipatrón",
        "antipatrones",
        "Baindo",
        "conceptualización",
        "conceptualizar",
        "deserialización",
        "deserializar",
        "deshabilitarlos",
        "grafólogo",
        "instanciación",
        "instanciar",
        "jdeferred",
        "LOPD",
        "Maspalomas",
        "MVVM",
        "obligarle",
        "OMAP",
        "Pixl",
        "Rayco",
        "raycoarana",
        "reasignarlo",
        "RGPD",
        "Roboto",
        "securizar",
        "serialización",
        "serializar",
        "wireframe",
        "wireframes",
        "Xperia"
    ],
    "ignoreWords": [],
    "ignoreRegExpList": [
        "\\((.*)\\)", // Markdown links
        "```[a-z]*\n[\\s\\S]*?\n```", // Markdown code blocks. h/t https://coderwall.com/p/r6b4xg/regex-to-match-github-s-markdown-code-blocks,
        "\\`([^\\`].*?)\\`", // inline code blocks. h/t https://stackoverflow.com/questions/41274241/how-to-capture-inline-markdown-code-but-not-a-markdown-code-fence-with-regex
        "\\{%.*%\\}", // liquid syntax
        "/^\\s*```[\\s\\S]*?^\\s*```/gm", // Another attempt at markdown code blocks. https://github.com/streetsidesoftware/vscode-spell-checker/issues/202#issuecomment-377477473
        "^---[\\s\\S]*?---$", // YAML front-matter
        "\\<[^\\>]*\\>" // HTML Tags
    ],
    "overrides": [
        {
            // Case sensitive markdown in the docs folder
            "filename": "README.md",
            "language": "en"
        }
    ]
}
